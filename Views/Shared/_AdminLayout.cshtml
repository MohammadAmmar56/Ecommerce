
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

     <style>
        @@import url('https://fonts.googleapis.com/css2?family=Lobster&display=swap');
    </style>
    @RenderSection("head", false)
    <link rel="stylesheet" href="~/css/adminlayout.css">

</head>
<body>

    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class=" border-end" id="sidebar-wrapper">
            <div class="list-group list-group-flush">

                <a asp-action="Index" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-gauge"></i>Dashboard</a>
                <a asp-action="Slider" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-sliders"></i>Manage Slider</a>
                <a asp-action="Category" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-image"></i>Categories</a>
                <a asp-action="Product" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-image"></i>Products</a>
                <a asp-action="NewArrival" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-image"></i>Arrivals</a>
                <a asp-action="Topsales" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-globe"></i>Top Sales</a>
                <a asp-action="Users" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-user"></i>Users</a>
                
                <a asp-action="ShoesCollection" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-image"></i>Shoes</a>
                <a asp-action="MensCollection" class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-image"></i>Mens</a>
                <button asp-action="Logout" asp-controller="Admin"  class="list-group-item list-group-item-action text-white"><i class="fa-solid fa-right-from-bracket" style="transform: rotate(180deg);"></i>Logout</button>


            </div>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <nav id="navbar1" class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <button class="btn btn-success" id="menu-toggle"><i class="fa-solid fa-bars"></i> Toggle Menu</button>
                <button class="btn btn-danger float-end" asp-action="Logout" asp-controller="Admin">Logout <i class="fa-solid fa-right-from-bracket" style="transform: rotate(180deg);"></i></button>
            </nav>



            <div class="container-fluid">
                <h4 class="mt-4">Admin Dashboard</h4>
                <!-- Multi-Panel Sections 1-->
                <div class="row">
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card bg-primary text-white">
                            <a asp-action="Slider">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fa-solid fa-circle-dollar-to-slot"></i> Total Sales</h5>
                                    <p class="card-text">$50,000</p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card bg-danger text-white">
                            <a asp-action="Users">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fa-solid fa-circle-user"></i> Users</h5>
                                    <p class="card-text">120</p>
                                </div>
                            </a>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card bg-warning text-white">
                            <a asp-action="Order">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fa-solid fa-cart-shopping"></i> Orders</h5>
                                    <p class="card-text">320</p>
                                </div>
                            </a>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card bg-success text-white">
                            <a asp-action="Slider">
                                <div class="card-body">
                                    <h5 class="card-title"><i class="fa-brands fa-product-hunt"></i> Products</h5>
                                    <p class="card-text">120</p>
                                </div>
                            </a>
                        </div>
                    </div>

                </div>

                <div class="row">
                    <div class="col-sm-12">
                        @RenderBody()
                    </div>
                </div>


            </div>
            <!-- /#page-content-wrapper -->
        </div>
    </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Custom JS for Animations -->
        <script>
            document.getElementById("menu-toggle").addEventListener("click", function () {
                document.getElementById("wrapper").classList.toggle("toggled");
            });
        </script>


</body>
</html>