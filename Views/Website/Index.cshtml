@model Ecommerce.Models.HomePage
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}
@section head {
   
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
}
@section categories {

    @foreach (var data in Model.category)
    {
        <a asp-action="Products" asp-route-id="@data.id"><i class="fa-solid fa-image"></i> @data.title</a>
    }

}

<div class="swiper mySwiper mySwiper1" style="border-radius:0 !important;">
    <div class="swiper-wrapper swiper-wrapper1">
     @foreach(var x in Model.slider)
        {
            <div class="swiper-slide swiper-slide1">
                <img src="~/slider/@x.image" />
                <p class="order">@x.heading</p>
                <a href="#@x.sliderlink">Shop Now</a>
            </div>
        }    
    </div>
    <div class="swiper-button-next ggg"></div>
    <div class="swiper-button-prev ggg"></div>
    <div class="swiper-pagination"></div>
</div>


<!-- collectio section  -->
<section id="collection">
    @* <h2 class="cardsheading" id="category" style="margin-top:15px;margin-bottom:0px !important;">Categories</h2> *@
    <div class="collections container" >
        
        @foreach(var x in Model.category)
        {
            <div class="content">
                <img src="~/category/@x.picture" />
                <div class="img-content">
                    <p>@x.title</p>

                    <button> <a asp-action="Products" asp-route-id="@x.id">SHOP NOW</a></button>
                </div>
                <p align="center" style="color:white;z-index:6;">@x.description</p>
            </div>
        }    
    </div>
</section>

<!-- seller section  -->
<section id="sellers">
           
    @* <h2 class="cards-heading" id="topsale">Top Sales</h2> *@
    <div class="product-main" id="topsale">
      
        @foreach (var x in Model.topsales)
        {
            <div class="product-card hvr-shrink">
                <a asp-action="#" asp-route-id="@x.id">
                <div class="product-front-image">
                    <div class="front-image">
                        <img alt="" class="img-fluid" src="~/topsales/@x.image">
                    </div>
                    <div class="product-like">
                        <svg xmlns="http://www.w3.org/2000/svg" class="_2oLiqr" width="28" height="28" viewBox="0 0 20 16">
                            <path d="M8.695 16.682C4.06 12.382 1 9.536 1 6.065 1 3.219 3.178 1 5.95 1c1.566 0 3.069.746 4.05 1.915C10.981 1.745 12.484 1 14.05 1 16.822 1 19 3.22 19 6.065c0 3.471-3.06 6.316-7.695 10.617L10 17.897l-1.305-1.215z" class="_35Y7Yo" stroke="#FFF" fill-rule="evenodd" opacity=".9"></path>
                        </svg>
                    </div>
                </div>
            </a>
            <div class="product-details">

                    <a class="brand-desc" title="" target="_blank" asp-action="#" asp-route-id="@x.id">@x.name</a>
                @* <div class="color-details">Grey</div> *@
                    <a class="" target="_blank" asp-action="#" asp-route-id="@x.id">
                    <div class="price-info-sec">
                        <div class="price">₹@x.price1</div>
                        <div class="cut-off">₹@x.price2</div>
                        <div class="discount-percent"><span>@x.discount% off</span></div>
                    </div>
                </a>
            </div>
        </div>
        }
    </div>
   @*  </div> *@

    @*-------------------------------------------- slider 2 -----------------------------------------------------*@
    <div class="swiper mySwiper mySwiper2">
        <div class="swiper-wrapper swiper-wrapper2">

            <div class="swiper-slide swiper-slide2">
                <img src="https://swiperjs.com/demos/images/nature-10.jpg" />
            </div>
            <div class="swiper-slide swiper-slide2">
                <img src="https://swiperjs.com/demos/images/nature-10.jpg" />
            </div>
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>

    <!-- new arrivals section start  -->
    @* <h2 class="cards-heading" style="margin-top:10px;" id="newarrival">New Arrivals</h2> *@
    <div class="product-main" id="newarrival">

        @foreach (var x in Model.newarrival)
        {
            <div class="product-card hvr-shrink">
                <a href="#">
                    <div class="product-front-image">
                        <div class="front-image">
                            <img alt="" class="img-fluid" src="~/newarrival/@x.image">
                            <p>New</p>
                        </div>
                        <div class="product-like">
                            <svg xmlns="http://www.w3.org/2000/svg" class="_2oLiqr" width="28" height="28" viewBox="0 0 20 16">
                                <path d="M8.695 16.682C4.06 12.382 1 9.536 1 6.065 1 3.219 3.178 1 5.95 1c1.566 0 3.069.746 4.05 1.915C10.981 1.745 12.484 1 14.05 1 16.822 1 19 3.22 19 6.065c0 3.471-3.06 6.316-7.695 10.617L10 17.897l-1.305-1.215z" class="_35Y7Yo" stroke="#FFF" fill-rule="evenodd" opacity=".9"></path>
                            </svg>
                        </div>
                    </div>
                </a>
                <div class="product-details">

                    <a class="brand-desc" title="" target="_blank" href="">@x.name</a>
                    @* <div class="color-details">Grey</div> *@
                    <a class="" target="_blank" href="#">
                        <div class="price-info-sec">
                            <div class="price">₹@x.price1</div>
                            <div class="cut-off">₹@x.price2</div>
                            <div class="discount-percent"><span>@x.discount% off</span></div>
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</section>



<!-- news section  -->
<section id="news">
    <div class="news-heading">
        <p>LATEST NEWS</p>
        <h2>New Trends</h2>
    </div>
    <div class="l-news container">
        <div class="l-news1">
            <div class="news1-img">
                <img src="https://i.postimg.cc/2y6wbZCm/news1.jpg" alt="img">
            </div>
            <div class="news1-conte">
                <div class="date-news1">
                    <p><i class='bx bxs-calendar'></i> 12 February 2022</p>
                    <h4>What Curling Irons Are The Best Ones</h4>
                    <a href="https://www.vogue.com/article/best-curling-irons" target="_blank">read more</a>
                </div>
            </div>
        </div>
    </div>
</section>




