@model Ecommerce.Models.product
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_WebsiteLayout";
}

@section head{
    <link href="~/css/Single.css" rel="stylesheet" />
}

<div class="single-product-main">
    <div class="single-product-image">
       <img src="~/product/@Model.image" alt="@Model.name" />
    </div>

    <div class="single-product-details">
        <h3>@Model.name</h3>
        <div class="star">
            <i class="fa-solid fa-star"></i><p>4 Stars</p>
        </div>
        <div class="price">
            <p class="main-price">₹@Model.price1</p> <p class="cut-price" style="text-decoration: line-through; color: rgb(143, 140, 140);">₹@Model.price2</p>
        </div>
        <div class="saved-price">
            <p>@Model.discount% off</p>
        </div>
        <hr>
        <p class="bank-offers">
            <b>7 Days easy return policy </b> <br>
            Bank Offer5% Unlimited Cashback on Flipkart Axis Bank Credit CardT&C <br>
            Bank Offer10% off up to ₹1,500 on SBI Credit Card Transactions of ₹4,990 and above <br>
            Bank Offer10% off up to ₹1,750 on SBI Credit Card EMI Transactions of ₹4,990 and above
        </p>
        <div class="button">
            <a class="buy-now" asp-action="BuyNow" asp-route-id="@Model.id">Buy Now</a>
            <a class="buy-now" style="background-color: rgb(6, 187, 36);">Add <i class="fa-solid fa-cart-shopping"></i></a>
        </div>

    </div>

</div>

