@{
    // Layout = "_WebsiteLayout";
}
<!DOCTYPE html>
<html>
    <head>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    <title>resetpassword</title>
    <style>
       
        *{
            margin:0;
            padding:0;
            box-sizing:border-box;
        }
        body {
            min-height:100vh !important;
            width: 100% !important;
            display: flex;
            align-items: center;
            justify-content: center;
            color: black;
        }

        .main {
            height: 480px;
            width: 800px;
            background-color: rgba(170, 162, 162, 0.215);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 30px;
            border-radius: 0px 90px 0px 90px;
            border: 2px solid black;
            background-color: dodgerblue;
            box-shadow: 0px 3px 0px 0px white;
            position:relative;
        }

        .left-side {
            height: 100%;
            width: 400px;
            /* background-color: rgba(98, 94, 94, 0.144); */
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .left-side img {
                height: 100%;
                width: 100%;
                background-size: cover;
                object-fit: cover;
            }

        .table1 {
            height: 430px;
            width: 300px;
            display: flex;
            flex-direction: column;
            gap: 5px;
            align-items: center;
            justify-content: center;
            background-color: rgba(104, 103, 103, 0.53);
            border-radius: 10px;
        }

            .table1 input {
                height: 25px;
                width: 250px;
                border: none;
                padding: 10px;
                border-radius: 3px;
            }

                .table1 input::placeholder {
                    padding: 10px;
                    margin-left: 10px;
                }

        .icon {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 7px;
        }

            .icon a {
                height: 35px;
                width: 70px;
                background-color: white;
                display: flex;
                align-items: center;
                justify-content: center;
                border-radius: 50px;
            }

                .icon a img {
                    height: 80%;
                    width: 40%;
                    background-size: cover;
                }

                    .icon a img:hover {
                        padding: 2px 2px;
                    }

        .sign-in {
            height: 35px;
            width: 250px;
            font-size: 18px;
            font-weight: 600;
            color: white;
            background-color: #fab728;
            border: none;
            border-radius: 3px;
        }

            .sign-in:hover {
                background-color: rgb(63, 169, 210);
            }

        .Sign-up {
            height: 35px;
            width: 250px;
            font-size: 18px;
            font-weight: 600;
            color: white;
            background-color: rgb(63, 169, 210);
            border: none;
            border-radius: 3px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .table1 h1 {
            font-weight: 600;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
        }

        a {
            text-decoration: none;
            color: black;
        }
    </style>

    </head>

    <body>
    <div class="main ">

        <div class="left-side">
            <img src="~/images/login image.png">
        </div>
        <form asp-action="ResetPassword" method="post">
            <div class="table1">
                <h1 style="color:white;">Reset-Password</h1><br>
                <input type="text" name="myotp" placeholder="Enter OTP" required>
                <input type="password" name="newpass" placeholder="Enter New Password" required>
                <input type="password" name="confirmpass" placeholder="Confirm Password" required>
                <button class="sign-in">Reset Password</button>
            </div>
        </form>
    </div>

 

    @if (TempData["error"] != null)
    {
        <script>
            Swal.fire({
                title: "Oops!",
                text: "@TempData["error"]",
                icon: "error"
            });
        </script>
    }

    </body>
</html>

       




