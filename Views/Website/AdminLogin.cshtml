@{
    Layout = "_WebsiteLayout";
}
@section head{
    <link href="~/css/style.css" rel="stylesheet" />
      <style>
          body {
    background: #222;
  }
  .main{
    height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  #box {
    width: 400px;
    /* padding: 20px; */
    height: 350px;
    border-radius: 20px;
    color: #fff;
    background: #262626;
    display: flex;
    justify-content: center;
    align-items:center;
    position: relative;
  }

  #box::after,
  #box::before {
    content: "";
    width: calc(100% + 4px);
    height: calc(100% + 4px);
    background: linear-gradient(45deg, #fb0094, #0000ff, #00ff00, #ffff00, #ff0000, #fb0094, #0000ff, #00ff00, #ffff00, #ff0000);
    background-size: 400%;
    position: absolute;
    border-radius: 20px;
    top: -2px;
    left: -2px;
    z-index: -1;
    animation: animated-shadow 10s linear infinite alternate;
  }

  #box::after {
    filter: blur(30px);
  }

  @@keyframes animated-shadow {
    0% {
      background-position: 0 0;
    }

    50% {
      background-position: 100% 0;
    }

    100% {
      background-position: 0 0;
    }
  }
  .admin{
    height:auto;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 30px;
    /* position: absolute; */
  }
  .input{
    height:50px;
    width:300px;
    display: flex;
    margin-top: 5px;
    padding: 10px;
    gap: 10px;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    /* position: absolute; */
  }
  .input input{
    border: none;
    color: white;
    width: 90%;
    background-color: transparent !important;
    border-bottom: 1px solid red;
    outline: none;
  }
  .btn{
    display: flex;
    width: 100%;
    margin: 10px 0px;
    justify-content: center;
  }
  .btn button{
    padding: 5px 20px;
    cursor: pointer;
    color: white;
    background-color: transparent !important;
  }
  .btn button:hover{
    border:2px solid red;
  }
  
      </style>
}

<div class="main">
    <div id="box">
        <form method="post" asp-action="AdminLogin">
            <div class="admin">
                <i class="fa-solid fa-key"></i><h3>Admin Login</h3>
            </div>
            <div class="input">
                <i class="fa-solid fa-user"></i><input type="text" name="email" required />
            </div>
            <div class="input">
                <i class="fa-solid fa-lock"></i><input type="password" name="password" required />
            </div>
                <div class="btn">
                    <button>
                        Login
                    </button>
                </div>
        </form>
    </div>
</div>

