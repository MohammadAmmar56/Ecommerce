@model IEnumerable<Ecommerce.Models.order>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout";
}
<h1>Order</h1>

<table class="table table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Transection Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>Address1</th>
        <th>Address2</th>
        <th>Product name</th>
        <th>Price</th>
        <th>Payment Status</th>
        <th>Reciept</th>
        <th>Action</th>
    </tr>
    @{
        int sr = 1;
    }
    @foreach (var x in Model)
    {
        <tr>
            <td>@sr</td>
            <td>@x.transactionid</td>
            <td>@x.name</td>
            <td>@x.email</td>
            <td>@x.phone</td>
            <td>@x.address1</td>
            <td>@x.address2</td>
            <td>@x.productname</td>
            <td>@x.productprice</td>
            <td>@x.paymentstatus</td>
            <td>
                <a class="btn btn-info" asp-action="Invoice" asp-route-id="@x.id">Invoice</a>
            </td>
            <td>
                <a class="btn btn-danger" asp-action="DeleteOrder" asp-route-id="@x.id">Delete</a>
            </td>
        </tr>
        sr++;
    }

</table>
